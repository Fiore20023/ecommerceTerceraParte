    function filtrarTablaProductos(termino) {
        if (!termino) {
            renderizarTabla(todosLosProductos);
            return;
        }
        
        const productosFiltrados = todosLosProductos.filter(producto => {
            const nombre = (producto.nombre || '').toLowerCase();
            const marca = (producto.marca || '').toLowerCase();
            const categoria = (producto.categoria || '').toLowerCase();
            const descripcion = (producto['descripcion-corta'] || producto.descripcion || '').toLowerCase();
            
            return nombre.includes(termino) || 
                   marca.includes(termino) || 
                   categoria.includes(termino) || 
                   descripcion.includes(termino);
        });
        
        renderizarTabla(productosFiltrados);
        
        if (productosFiltrados.length === 0 && tablaBody) {
            tablaBody.innerHTML = `
                <tr>
                    <td colspan="10" style="text-align:center; padding:2rem; color:#666;">
