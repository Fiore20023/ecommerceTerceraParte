# Configuración del servidor
PORT=3000

# Configuración de MongoDB Atlas
# Reemplaza <username>, <password> y <cluster> con tus credenciales de MongoDB Atlas
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/ecommerce?retryWrites=true&w=majority

# Nombre de la base de datos
DB_NAME=ecommerce

# Colecciones
PRODUCTOS_COLLECTION=productos
CARRITO_COLLECTION=carritos

# Mercado Pago (credenciales de prueba)
MERCADOPAGO_ACCESS_TOKEN=APP_USR_XXXXXXXXXXXXXXXXXXXXXXXX
MERCADOPAGO_PUBLIC_KEY=APP_USR_XXXXXXXXXXXXXXXXXXXXXXXX

# URLs de la aplicación
FRONTEND_URL=http://localhost:3001
BACKEND_URL=http://localhost:3001
